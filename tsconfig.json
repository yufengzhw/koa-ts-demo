{
    "compilerOptions": {
        "declaration": false,
        "lib": ["es5", "es6", "es2016", "es2017"],
        "target": "es6",
        "module": "commonjs",
        "allowJs": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "typeRoots": [
            "src/types",
            "node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "@public": ["./public"]
        },
        "strict": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
